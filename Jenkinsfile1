pipeline {
    agent any

    tools{
    maven 'mv'
    }

    stages {
        stage("build") {
            steps {
                sh "mvn clean install"
            }
        }

        stage("test") {
            steps{
                sh "mvn test"
            }
        }
               stage("deploy") {
            steps {
           deploy adapters: [tomcat9(credentialsId: '5', path: '', url: 'http://35.197.41.139:8080')], contextPath: '/war', war: '**/*.war'
            }
        }
}
}